{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Messenger App",
  "scripts": {
    "dev-parcel": "parcel src/index.html --no-cache --port=3000 --open",
    "start-parcel": "parcel build src/index.html && node server.js",
    "build": "webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve",
    "eslint": "eslint . --fix",
    "stylelint": "stylelint \"**/*.scss\" --fix",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "prepare": "husky install"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NikolayDimitriev/middle.messenger.praktikum.yandex.git"
  },
  "keywords": [
    "web-messenger",
    "messenger",
    "typescript",
    "handlebars"
  ],
  "lint-staged": {
    "*.ts": [
      "npm run eslint"
    ],
    "*.scss": [
      "npm run stylelint"
    ]
  },
  "author": "Nikolay Dimitriev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NikolayDimitriev/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/NikolayDimitriev/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "2.8.2",
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "chai": "^4.3.7",
    "css-loader": "^6.7.3",
    "eslint": "8.33.0",
    "eslint-config-airbnb": "19.0.4",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.1",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.2.0",
    "parcel": "2.8.2",
    "parcel-transformer-hbs": "1.0.4",
    "prettier": "2.8.3",
    "proxyquire": "^2.1.3",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "sinon": "^15.0.3",
    "style-loader": "^3.3.1",
    "stylelint": "14.16.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-scss": "4.3.0",
    "ts-loader": "^9.4.2",
    "ts-node": "10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "target": {
    "default": {
      "sourceMap": false,
      "engines": {
        "browser": ">= 50%"
      }
    }
  },
  "engines": {
    "node": ">= 12.0"
  },
  "dependencies": {
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "nanoid": "3"
  }
}
