{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["index.d.ts", "images.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
