{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["index.d.ts", "images.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
